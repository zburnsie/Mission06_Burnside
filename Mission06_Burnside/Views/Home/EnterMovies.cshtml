@model Movie

@{
    ViewData["Title"] = "Enter a Movie";
}

<!-- Form to enter a movie --> 
<html>
<head>
    <title>Enter a Movie</title>
    <style>
        .form-group {
            margin-bottom: 15px;
            display: flex;
            flex-direction: column;
        }

        button {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div>
        <h1>Enter a Movie</h1>
    </div>

<form method="post">
    
    <input type="hidden" asp-for="MovieId" />
    
    <div class="form-group">
        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId" class="form-control">
            <option value="">Select a category</option>
            @foreach (Category category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }
        </select>
    </div>


    <div class="form-group">
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" class="form-control" required/>
    </div>

    <div class="form-group">
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" type="number" class="form-control" required/>
    </div>

    <div class="form-group">
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating" class="form-control">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="NC-17">NC-17</option>
            <option value="UR">UR</option>
            <option value="NR">NR</option>
            <option value="TV-G">TV-G</option>
            <option value="TV-PG">TV-PG</option>
            <option value="TV-14">TV-14</option>
            <option value="TV-MA">TV-MA</option>
            <option value="TV-Y7">TV-Y7</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Edited">Edited:</label>
        <input asp-for="Edited" type="checkbox"/>
    </div>

    <div class="form-group">
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="CopiedToPlex">Copied to Plex:</label>
        <input asp-for="CopiedToPlex" type="checkbox"/>
    </div>


    <div class="form-group">
        <label asp-for="Notes">Notes (max 25 characters):</label>
        <input asp-for="Notes" class="form-control" maxlength="25"/>
    </div>

    <button type="submit" class="btn btn-primary">Submit Movie</button>

    <div asp-validation-summary="All"></div>
    
</form>

</body>
</html>
